<div class="divider"></div>
<div class="row">
    <div class="s12 m3 col"><b>{{ recordsCount|number_format }} record{% if recordsCount|length >1 %}s{% endif %}
            found</b></div>
    <div class="s12 m6 col">
         <ul class="pagination">
                {# previous page #}
                {% if currentPage > 1 %}
                    <li class="page" data-number="{{ currentPage - 1 }}" data-path="{{ path('app_front_databaseSearchSettings') }}"><button class="waves-effect btn">&lt;</button></li>
                {% endif %}

                {# page range #}
                {% for page in pages %}
                    {% if page == currentPage %}
                        <li><strong> <button class="waves-effect btn active">{{ page }}</button></strong></li>
                    {% elseif page is same as ('...') %}
                        <li> .... </li>
                    {% else %}
                        <li class="page" data-number="{{ page }}" data-path="{{ path('app_front_databaseSearchSettings') }}">
                            <button class="waves-effect btn">{{ page }}</button></li>
                    {% endif %}
                {% endfor %}

                {# Odkaz na následující stránku #}
                {% if currentPage < totalPages %}
                    <li class="page" data-number="{{ currentPage + 1 }}" data-path="{{ path('app_front_databaseSearchSettings') }}"><button class="waves-effect btn">&gt;</button></li>
                {% endif %}
            </ul>
    </div>
    <div class="s8 m2 col">
        <form>
            <div class="input-field">
                <select id="recordsPerPage" name="recordsPerPage" data-path="{{ path('app_front_databaseSearchSettings') }}">
                    {% for value in recordsPerPage %}
                        <option value="{{ value }}" {% if value == settings['recordsPerPage'] %}selected{% endif %}>{{ value }}</option>
                    {% endfor %}
                </select>
                <label for="recordsPerPage">Items per Page</label>
            </div>
        </form>
    </div>

</div>
<div class="row">
    <div class="s12 m8 col">
        <button class="btn-flat waves-effect waves-light" type="button" name="action" value="Create map">Create map
        </button>
        <a href="exportKml.php" download>
            <button class="btn-flat waves-effect waves-light exportKML">Download KML</button>
        </a>
        <a href="exportCsv.php" download>
            <button class="btn-flat waves-effect waves-light exportContent">Download XLSX</button>
        </a>
        <a href="exportCsv.php?type=ods" download>
            <button class="btn-flat waves-effect waves-light exportContent">Download ODS</button>
        </a>
        <a href="exportCsv.php?type=csv" download>
            <button class="btn-flat waves-effect waves-light exportContent">Download CSV</button>
        </a>
    </div>
</div>
<div class="divider"></div>
<div class="row">
    <table id="result-table" class="striped responsive-table">
        <thead>
        <tr>
            <th></th>
            <th class="resulttax">Taxon</th>
            <th class="resultcol">Collector</th>
            <th class="result">Date</th>
            <th class="result">Location</th>
            <th class="result">Typus</th>
            <th class="result">Collection Herb.#</th>
            <th class="result">Lat/Lon</th>
        </tr>
        </thead>
        <tbody>
        {% for key, specimen in records %}
            {% include 'front/home/searchRecord.html.twig' with {'specimen': specimen} only %}
        {% endfor %}
        </tbody>
    </table>
</div>
</div>


