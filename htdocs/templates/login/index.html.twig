{% extends 'base.html.twig' %}
{% block title %}Log in{% endblock %}
{% block body %}
    <div class="row">
        <div class="col s10 m6 l4 offset-s1 offset-l4 offset-m3 center">
            <h2>Log in </h2><img src="{{ asset('logo/jacq.png') }}" alt="JACQ logo"/>
            <form action="{{ path('app_login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {% if error %}
                    {% if error.messageKey != 'Invalid credentials.' %}
                        <p class="red-text">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}
                {% endif %}

                <div class="input-field">
                    <label for="username"><strong>Username</strong></label>
                    <input
                        class="validate {% if error %}{{ error.messageKey == 'Invalid credentials.' ? "invalid" : "" }}{% endif %}"
                        tabindex="1" type="text" required id="username" name="_username" value="{{ last_username }}">
                    <span class="helper-text" data-error="Invalid username or password." data-success=""></span>
                </div>
                <div>
                    <label for="password"><strong>Password</strong></label>
                    <input
                        class="validate {% if error %}{{ error.messageKey == 'Invalid credentials.' ? "invalid" : "" }}{% endif %}"
                        tabindex="2" type="password" required id="password" name="_password">
                    <span class="helper-text" data-error="Invalid username address or password." data-success=""></span>
                </div>
                <p>
                    <a href="#" tabindex="5">Forgot your password?</a>
                </p>
                <p>
                    <button class="btn" tabindex="3" type="submit">Login</button>
                </p>
                <p>Need an account? <a href="#" tabindex="4">Sign up</a></p>
            </form>
        </div>
    </div>
{% endblock %}
